@{
    ViewBag.Title = "About";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<div class="row">
    <div class="col-lg-12">
        <h3>@Convert.ToString(Request.QueryString["deviceid"])</h3>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <td>Messages</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.getMessages)
                {
                    <tr>
                        <td>@item</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
